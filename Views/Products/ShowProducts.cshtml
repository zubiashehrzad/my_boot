@model IEnumerable<my_boot.Models.Product>

@{
    ViewBag.Title = "ShowProducts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ShowProducts</h2>

<div class ="container">
    <div class="row">

        @foreach (var item in Model)
        {
        <div class=" col-md-4">
            <img src="@Url.Content(item.P_image)" alt="Girl in a jacket" style="height : 60px;width : 60px;" />
            @Html.DisplayFor(modelItem => item.P_price)
            @Html.DisplayFor(modelItem => item.Category.Cat_name)
            <input type="submit" value="Add to Cart" class="fa fa-cart" />

        </div>

        }

    </div>

</div>


