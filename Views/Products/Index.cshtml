@model IEnumerable<my_boot.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>



<p>
    @if (@TempData["total"] == null)
    {
    <h3>Total Bill:£0</h3> 
    }
    else
    {
        <h3>Total Bill: £ @TempData["total"]</h3>
    }

    @Html.ActionLink("Create New", "Create")
    <br><br />
    @Html.ActionLink("Check out", "Checkout", "Products")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.P_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.P_image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.P_description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.P_price)
        </th>
