            @Html.DisplayNameFor(model => model.user_id)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Category.Cat_name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {

    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.P_name)
        </td>
        <td>
