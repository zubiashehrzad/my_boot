            @Html.ActionLink("Add To Cart", "AddToCart", new { id = item.P_id }) |

            @Html.ActionLink("Edit", "Edit", new { id = item.P_id }) |
            @Html.ActionLink("Details", "Details", new { id = item.P_id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.P_id })
        </td>
    </tr>
}

